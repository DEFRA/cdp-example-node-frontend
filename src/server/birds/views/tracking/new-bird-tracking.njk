{% extends 'layouts/page.njk' %}


{% block content %}
  {{ appHeading({
    title: heading,
    aside: {
      html: asideHtml
    }
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-body" data-testid="app-page-body">

        <form action="{{ action }}" method="post">

          {% call govukFieldset() %}

            {{ govukInput({
              label: {
                text: "Spotter name",
                classes: "govuk-label--m"
              },
              id: "spotter",
              name: "spotter",
              hint: {
                text: "What is the spotter's name?"
              },
              errorMessage: {
                text: formErrors.spotter.message
              } if formErrors.spotter.message
            }) }}


          {% endcall %}

          {{ govukButton({
            text: "Next"
          }) }}

        </form>
      </div>
    </div>
  </div>

{% endblock %}
