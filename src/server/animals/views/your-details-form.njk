{% extends 'layouts/page.njk' %}

{% block content %}
  {{ appHeading({
    title: heading,
    caption: "Your details."
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <div class="govuk-body" data-testid="app-page-body">

        <form action="{{ action }}" method="post">

          {% call govukFieldset() %}

            {{ govukInput({
              label: {
                text: "Phone number",
                classes: "govuk-label--m"
              },
              id: "phoneNumber",
              name: "phoneNumber",
              hint: {
                text: "What is your phone number?"
              },
              errorMessage: {
                text: formErrors.phoneNumber.message
              } if formErrors.phoneNumber.message
            }) }}

          {% endcall %}

          {{ govukButton({
            text: "Next"
          }) }}

        </form>

      </div>
    </div>
  </div>


{% endblock %}
